<?xml version="1.0" encoding="utf-8"?>
<com.gecq.geplayer.ui.SettingItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/setting_item_btn"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:contentDescription="@null" 
        android:scaleType="fitCenter"
        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#44000000"
        android:orientation="horizontal" 
        android:padding="3dp"
        android:id="@+id/settin_item_title"
        >

        <TextView
            android:id="@+id/setting_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff" 
            android:layout_weight="6"
            />
        <TextView
            android:id="@+id/setting_item_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff" 
            android:layout_weight="1"
            />
    </LinearLayout>

</com.gecq.geplayer.ui.SettingItemLayout>